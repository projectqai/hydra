{
  "name": "@hydra/view",
  "devDependencies": {
    "expo-router": "^6.0.19",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.6.2",
    "typescript": "^5.9.2"
  },
  "overrides": {
    "react": "19.1.0",
    "react-native": "0.81.5",
    "@types/react": "~19.1.0",
    "react-server-dom-webpack": "19.1.2",
    "react-native-reanimated": "4.1.5",
    "event-target-shim": "6.0.2"
  },
  "private": true,
  "scripts": {
    "dev": "bun run --cwd apps/foss dev",
    "dev:web": "bun run --cwd apps/foss web",
    "dev:android": "bun run --cwd apps/foss android",
    "lint": "turbo lint --continue",
    "lint:fix": "turbo lint --continue -- --fix",
    "format": "prettier --write .",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "build": "turbo build",
    "build:web": "bun run --cwd apps/foss build:web",
    "serve": "bun run --cwd apps/foss serve"
  },
  "workspaces": [
    "apps/foss",
    "packages/core",
    "packages/eslint-config",
    "packages/hydra-engine",
    "packages/map-engine",
    "packages/typescript-config",
    "packages/ui"
  ]
}
